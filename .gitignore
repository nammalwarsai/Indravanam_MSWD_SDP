# Ignore node_modules for client and server only
client/node_modules/
server/node_modules/

# Keep node_modules in the main directory for TailwindCSS and other top-level dependencies
/node_modules
# Ignore TailwindCSS build artifacts if generated
tailwind.config.js
postcss.config.js

# Ignore build directories
build/
client/build/
server/build/

# Ignore environment files (sensitive data)
.env
.env.local
.env.development
.env.development.local
.env.test
.env.test.local
.env.production
.env.production.local
server/.env

# Ignore package-lock and yarn.lock files (optional, remove if these should be tracked)
package-lock.json
yarn.lock
client/package-lock.json
client/yarn.lock
server/package-lock.json
server/yarn.lock

# Ignore logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Ignore coverage directories (if using testing tools)
coverage/
client/coverage/
server/coverage/

# Ignore system files
.DS_Store
Thumbs.db

# Ignore miscellaneous generated files
*.log
*.tmp
*.bak
